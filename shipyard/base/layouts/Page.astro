---
import Footer from './Footer.astro'
import { Header } from './Header.tsx'
import '@shipyard/ui/styles/globals.css'
import config from 'virtual:shipyard/config'
import {
  MobileSidebar,
  type MobileSidebarProps,
} from '../components/MobileSidebar.tsx'

type Props = {
  frontmatter?: {
    title?: string
    description?: string
    navigation: MobileSidebarProps
  }
} & {
  title?: string
  description?: string
  navigation: MobileSidebarProps
}
const locale = Astro.currentLocale || 'de'
const currentPath = Astro.url.pathname
const props = Astro.props.frontmatter || Astro.props
---

<html>
  <head>
    <meta charset="utf-8" />
    <title>
      {config.title ? `Levin Keller - ${config.title}` : 'Levin Keller'}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <div class="relative flex min-h-screen flex-col bg-background">
      <Header client:load locale={locale} path={currentPath} />
      <main class="flex-1">
        <div
          class="container flex-1 items-start md:grid md:grid-cols-[220px_minmax(0,1fr)] md:gap-6 lg:grid-cols-[240px_minmax(0,1fr)] lg:gap-1"
        >
          <aside
            class="fixed top-14 hidden h-[calc(100vh-3.5rem)] w-full shrink-0 md:sticky md:block"
          >
            <MobileSidebar
              local={props.navigation}
              global={config.globalNavigation}
            />
          </aside>

          <main
            class="relative py-6 lg:gap-10 lg:py-8 xl:grid xl:grid-cols-[1fr_300px]"
          >
            <slot />
          </main>
        </div>
        <Footer />
      </main>
    </div>
  </body>
</html>
